<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F9F6FF"
    android:layout_margin="8dp"
    android:elevation="2dp"
    android:clipToOutline="true"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Icon quảng cáo -->
        <ImageView
            android:id="@+id/ad_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/ad_circle_bg"
            android:padding="8dp" />

        <!-- Tiêu đề quảng cáo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ad_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5E2CA5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Tiêu đề quảng cáo" />

            <TextView
                android:id="@+id/ad_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6B6670"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:text="Mô tả ngắn gọn của quảng cáo..." />
        </LinearLayout>

        <!-- Nút hành động -->
        <Button
            android:id="@+id/ad_call_to_action"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:backgroundTint="#A596CC"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="13sp"
            android:text="Tìm hiểu" />
    </LinearLayout>

    <!-- Nhãn nhỏ “Được tài trợ” -->
    <TextView
        android:id="@+id/ad_advertiser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Được tài trợ"
        android:textColor="#9E9E9E"
        android:textSize="11sp"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp" />
</FrameLayout>